@model List<Producer>
@{
    ViewData["Title"] = "Producers";
}

<h1>Producers</h1>
<div class="row">
    <div class="col-md-8 offset-md-2">


        <table class="table table-hover">
            <thead>
                <tr class="text-center">
                    <th scope="col">Full Name</th>
                    <th scope="col">Picture</th>
                    <th scope="col">bio</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var cinema in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@cinema.FullName</td>

                        <td class="align-middle">
                            <img class="rounded-circle" src="@cinema.ProfilePictureURL" alt="@cinema.FullName" style="max-width: 120px" />
                        </td>

                        <td class="align-middle">@cinema.Biography</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary mb-1"><i class="bi bi-pencil-square"></i> Edit </a>
                            <a class="btn btn-outline-info mb-1"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-danger text-white mb-1"><i class="bi bi-trash"></i> Delete</a>
                        </td>

                    </tr>

                }

            </tbody>
        </table>

    </div>

</div>


