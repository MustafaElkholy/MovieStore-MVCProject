@model List<Movie>
@{
    ViewData["Title"] = "Movies";
}
<div class="container">
    <div class="d-flex justify-content-between">
        <h1>Browse Movies</h1>
        <div class="text-white" style="right: 25px; bottom: 25px;">
            <a asp-action="Create" asp-controller="Movie" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Add Movie</a>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-2">
    
    @foreach (var movie in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="aspect-ratio-container">
                    <img src="@movie.ImageURL" class="card-img-top aspect-ratio-content" alt="@movie.Name" title="@movie.Name">
                </div>
                <div class="card-body">
                    <h5 class="card-title fs-5">@movie.Name</h5>
                    <p class="card-text fs-6"> @string.Join(", ", movie.MovieGenres.Select(x => x.Genre?.GenreName))</p>
                    <p class="card-text fs-6"><strong>Plot: </strong>@movie.Description</p>
                    <p class="card-text fs-6"><strong>Stars: </strong>@string.Join(", ", movie.MovieActors.Select(x => x.Actor?.FullName))</p>
                    <p class="card-text fs-6"><strong>Directed By: </strong>@string.Join(", ", movie.Director?.FullName)</p>
                    
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-6">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm"><i class="bi bi-eye-fill"></i> Details</a>
                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> </a>

                        </div>
                        
                        <div class="col-6 text-end">
                            <a class="btn btn-success btn-sm text-white">
                                <i class="bi bi-cart-plus"></i> (@movie.Price.ToString("c"))
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .aspect-ratio-container {
        position: relative;
        width: 100%;
        padding-bottom: 75%; /* Adjust this value to control the aspect ratio (e.g., 100% for square, 56.25% for 16:9) */
    }

    .aspect-ratio-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .card {
        font-size: 0.875rem;
    }

    .fs-5 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .fs-6 {
        font-size: 0.9rem;
        margin-bottom: 0.3rem;
    }
</style>
