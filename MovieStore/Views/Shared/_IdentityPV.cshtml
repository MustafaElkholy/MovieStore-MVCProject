@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown"
                aria-expanded="false">
            <i class="bi bi-person-badge"></i> Hello @User.Identity.Name
        </button>


        <ul class="dropdown-menu" aria-labelledby="profile-btn">
           
            @if (User.IsInRole("User"))
            {
                <li class="text-center">
                    <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                        <i class="bi bi-list"></i> Cart
                    </a>
                </li>
            }


            @if (User.IsInRole("Admin"))
            {

                <li class="text-center">
                    <a class="dropdown-item" asp-controller="Order" asp-action="ReviewOrders">
                        <i class="bi bi-list"></i> Orders
                    </a>
                </li>

                <li class="dropdown">
                    <a class="dropdown-item dropdown-toggle" href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="bi bi-gear"></i> Management
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="managementDropdown">

                        <li>
                            <a class="dropdown-item" asp-controller="Movie" asp-action="Index">
                                <i class="bi bi-film"></i> Movies
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Director" asp-action="Index">
                                <i class="bi bi-headset"></i> Directors
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Actor" asp-action="Index">
                                <i class="bi bi-person-square"></i> Actors
                            </a>
                        </li>
                    </ul>
                </li>
            }

        </ul>




    </div>

    <li class="nav-item mx-1">
        <form asp-controller="Account" asp-action="SignOut" class="text-center">
            <button class="btn btn-outline-danger my-sm-0">
                <i class="bi bi-box-arrow-in-right"></i> Sign Out
            </button>
        </form>
    </li>
}

else
{


    <ul class="navbar-nav">
        <li class="nav-item mx-1">
            <a class="btn btn-outline-secondary my-2 my-sm-0 bi bi-box-arrow-in-right" asp-action="Login" asp-controller="Account"> Login</a>
        </li>
        <li class="nav-item mx-1">
            <a class="btn btn-outline-secondary bi bi-person-plus my-2 my-sm-0" asp-action="Register" asp-controller="Account"> Register</a>
        </li>
    </ul>
}


