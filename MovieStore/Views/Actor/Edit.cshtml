@model MovieStore.Models.Actor

@{
    ViewData["Title"] = $"Edit {Model.FullName}";
}

<h4 class="text-center"> Edit @Model.FullName Info</h4>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group text-center">
                <img class="rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                
            </div>

            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="ProfilePictureURL" class="form-control" />
                </div>
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="FullName" class="form-control" />
                </div>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Biography" class="form-label"></label>
                <div class="input-group">
                    <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                </div>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">View All</a>
                <input type="submit" value="Update" class="btn btn-outline-success" />
            </div>


        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
